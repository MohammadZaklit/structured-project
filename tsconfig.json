/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "paths": {
      "@angular/": ["./node_modules/@angular/"],
      "@zak-lib/ui-library/*": ["projects/my-lib/src/lib/*", "dist/my-lib/src/lib/*"]
    },
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/my-lib/tsconfig.lib.json"
    },
    {
      "path": "./projects/my-lib/tsconfig.spec.json"
    },
    {
      "path": "./projects/authentication-page/tsconfig.app.json"
    },
    {
      "path": "./projects/authentication-page/tsconfig.spec.json"
    },
    {
      "path": "./projects/my-first-app/tsconfig.app.json"
    },
    {
      "path": "./projects/my-first-app/tsconfig.spec.json"
    },
    {
      "path": "./projects/form-builder/tsconfig.app.json"
    },
    {
      "path": "./projects/form-builder/tsconfig.spec.json"
    }
  ]
}
